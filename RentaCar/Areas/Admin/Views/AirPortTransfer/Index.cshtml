@using RentaCar.Areas.Admin.ViewModels.AirPortTransfer
@model AirPortTransferIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">AirPortTransfer </h4>
                        <a style="font-weight:bold" class="btn btn-outline-success" asp-action="create" asp-controller="AirPortTransfer" asp-area="admin">CREATE CATEGORY</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Create Time</th>
                                        <th>Brand</th>
                                        <th>Model</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Photo</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in Model.AirPortTransfers)
                                    {
                                        <tr>
                                            <td>@transfer.Id</td>
                                            <td>@transfer.CreateDate.ToString("dd/MM/yyyy")</td>
                                            <td>@transfer.Brand</td>
                                            <td>@transfer.Model</td>
                                            <td>@transfer.Description</td>
                                            <td>@transfer.Price</td>
                                            <td><img src="~/assets/img/@transfer.FilePath" /></td>

                                            <td>
                                                <a style="font-weight:bold" class="btn btn-outline-primary" asp-action="update" asp-controller="airporttransfer" asp-area="admin" asp-route-id="@transfer.Id">Update</a>
                                                <a style="font-weight:bold" class="btn btn-outline-danger" onclick="confirm('Are You sure?')" asp-action="delete" asp-controller="airporttransfer" asp-area="admin" asp-route-id="@transfer.Id">Delete</a>
                                                <a style="font-weight:bold" class="btn btn-outline-warning" asp-action="details" asp-controller="airporttransfer" asp-area="admin" asp-route-id="@transfer.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>