
@using RentaCar.Areas.Admin.ViewModels.CategoryComponent
@model CategoryComponentCreateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Category Component
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="categorycomponent" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SubTitle">SubTitle</label>
                                <input class="form-control" asp-for="SubTitle">
                                <span asp-validation-for="SubTitle"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DailyPrice">DailyPrice</label>
                                <textarea class="form-control" asp-for="DailyPrice"></textarea>
                                <span asp-validation-for="DailyPrice"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="WeeklyPrice">WeeklyPrice</label>
                                <input class="form-control" asp-for="WeeklyPrice">
                                <span asp-validation-for="WeeklyPrice"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date">Date</label>
                                <input class="form-control" asp-for="Date">
                                <span asp-validation-for="Date"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Seat">Seat</label>
                                <input class="form-control" asp-for="Seat">
                                <span asp-validation-for="Seat"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FuelType">FuelType</label>
                                <input class="form-control" asp-for="FuelType">
                                <span asp-validation-for="FuelType"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Auto">Auto</label>
                                <input class="form-control" asp-for="Auto">
                                <span asp-validation-for="Auto"></span>
                            </div>

                   
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"></select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                      

                            <div class="form-group">
                                <label asp-for="MainPhoto">MainPhoto</label>
                                <input class="form-control" asp-for="MainPhoto">
                                <span asp-validation-for="MainPhoto"></span>
                            </div>


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="categorycomponent" asp-area="admin"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

