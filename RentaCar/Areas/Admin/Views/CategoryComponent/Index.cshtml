@using RentaCar.Areas.Admin.ViewModels.CategoryComponent
@using RentaCar.Models
@model CategoryComponentIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">CategoryComponent</h4>

                        <h5>Filter by:</h5>
                        <div class="filter-section">
                            <form method="get" asp-action="index" asp-controller="categorycomponent">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Title"></label>
                                            <input asp-for="Title" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="CategoryId"></label>
                                            <select asp-for="CategoryId" asp-items="Model.Categories">
                                                <option value="">Secin</option>
                                            </select>

                                        </div>
                                        <div style="width:200px" class="form-group">
                                            <label asp-for="SubTitle"></label>
                                            <input asp-for="SubTitle" class="form-control" />
                                        </div>
                                        <div style="width:200px" class="form-group">
                                            <label asp-for="DailyPrice"></label>
                                            <input asp-for="DailyPrice" class="form-control" />
                                        </div>
                                        <div style="width:200px" class="form-group">
                                            <label asp-for="WeeklyPrice"></label>
                                            <input asp-for="WeeklyPrice" class="form-control" />
                                        </div>
                                        <div style="width:200px" class="form-group">
                                            <label asp-for="Date"></label>
                                            <input asp-for="Date" class="form-control" />
                                        </div>
                                   
                                           <div style="width:200px"  class="form-group">
                                            <label asp-for="FuelType"></label>
                                            <input  asp-for="FuelType" class="form-control" />
                                        </div>
                                        <div style="width:200px" class="form-group">
                                            <label asp-for="Auto"></label>
                                            <input asp-for="Auto" class="form-control" />
                                        </div>
                                             
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-info">
                                                Search
                                            </button>
                                        </div>


                                    </div>

                                </div>
                            </form>


                        </div>

 <a class="btn btn-primary" asp-action="create" asp-controller="categorycomponent" asp-area="admin">CREATE Component</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>SubTitle</th>
                                        <th>Category</th>
                                        <th>DailyPrice</th>
                                        <th>WeeklyPrice</th>
                                        <th>Date</th>
                                        <th>Seat</th>
                                        <th>FuelType</th>
                                        <th>Auto</th>
                                        <th>Photo</th>
                                        <th>Actions</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var component in Model.CategoryComponents)
                                    {
                                        <tr>
                                            <td>@component.Id</td>
                                            <td>@component.Title</td>
                                            <td>@component.SubTitle</td>
                                            <td>@component.Category.Title</td>
                                            <td>@component.DailyPrice</td>
                                            <td>@component.WeeklyPrice</td>
                                            <td>@component.Date</td>
                                            <td>@component.Seat</td>
                                            <td>@component.FuelType</td>
                                            <td>@component.Auto</td>
                                            <td><img src="~/assets/img/@component.PhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="categorycomponent" asp-area="admin" asp-route-id="@component.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Are You Sure?')" asp-action="delete" asp-controller="categorycomponent" asp-area="admin" asp-route-id="@component.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="categorycomponent" asp-area="admin" asp-route-id="@component.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>