﻿@using RentaCar.Areas.Admin.ViewModels.CategoryComponent
@model CategoryComponentDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Compnent Details</h4>
            <h3>Photos:</h3>
            <div>

              

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>mainPhoto</th>
                            <th>Id</th>
                            <th>Title</th>
                            <th>SubTitle</th>
                            <th>DailyPrice</th>
                            <th>WeeklyPrice</th>
                            <th>FuelType</th>
                            <th>Auto</th>
                            <th>Category</th>
                         

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="~/assets/img/@Model.PhotoPath" /></td>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Model.SubTitle</td>
                            <td>@Model.DailyPrice</td>
                            <td>@Model.WeeklyPrice</td>
                            <td>@Model.FuelType</td>
                            <td>@Model.Auto</td>

                            <td><select disabled class="form-select" asp-for="CategoryId" asp-items="@Model.Categories"></select> </td>
                         
                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="categorycomponent" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>