@using RentaCar.Areas.Admin.ViewModels.BookService
@model BookServiceCreateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Book Service
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="bookservice" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span asp-validation-for="Description"></span>
                            </div>
            

                            <div class="form-group">
                                <label asp-for="FilePath">MainPhoto</label>
                                <input class="form-control" asp-for="FilePath">
                                <span asp-validation-for="FilePath"></span>
                            </div>


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="bookservice" asp-area="admin"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
